#
# Testing connections to serializer process
#

# --------------------------------------------------
# process sim :: detected_object_input
#        file_name = dos
#        reader:type = csv
# --------------------------------------------------
process sim :: detected_object_input
        file_name = none
        reader:type = simulator
        reader:simulator:center_x = 200
        reader:simulator:center_y = 200
        reader:simulator:dx = 20
        reader:simulator:dy = 20
        reader:simulator:height = 400
        reader:simulator:width = 400

# --------------------------------------------------
process ser :: serializer
        serialization_type = protobuf

connect from sim.detected_object_set to ser.dos

# --------------------------------------------------
process zmq :: zmq_transport_send
        port = 5562

connect from ser.dos to zmq.serialized_message
